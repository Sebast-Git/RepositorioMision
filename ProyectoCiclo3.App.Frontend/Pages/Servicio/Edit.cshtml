@page
@model ProyectoCiclo3.App.Frontend.Pages.EditServicioModel
@{
    var Servicio = Model.Servicio;
}
 
<div class="text-center">
<form method="post">
    <label for="id" class="form-label">Id:</label>
  <input type="number" class="form-control" id="id" placeholder="Id" name="@Servicio.id" required> 



    <label for="origen" class="form-label">Origen:</label>
    <select name="@Servicio.origen.nombre" class="form-control">
        <option value="">-</option>
        @foreach (var usuario in Model.Usuario)
    {
        <option value="@usuario.id">@usuario.nombre @usuario.apellidos - @usuario.ciudad</option>
    }
    </select>

  <label for="destino" class="form-label">Destino:</label>
    <select name="@Servicio.destino.nombre" class="form-control">
        <option value="">-</option>
        @foreach (var usuario in Model.Usuario)
    {
        <option value="@usuario.id">@usuario.nombre @usuario.apellidos - @usuario.ciudad</option>
    }
    </select>

  <label for="fecha" class="form-label">Fecha:</label>
  <input type="date" class="form-control" id="fecha" placeholder="Fecha" name="@Servicio.fecha" required> 

    <label for="hora" class="form-label">Hora:</label>
  <input type="text" class="form-control" id="hora" placeholder="Hora" name="@Servicio.hora" required>

      <label for="encomienda" class="form-label">Encomienda:</label>
    <select name="@Servicio.encomienda.descripcion" class="form-control">
        <option value="">-</option>
        @foreach (var encomienda in Model.Encomienda)
    {
        <option value="@encomienda.id">@encomienda.descripcion</option>
    }
    </select>

  <hr>
  
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>