<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoCiclo3.App.Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container p-3 my-3 border">
                <a class="navbar-brand" asp-area="" asp-page="/Index">AmazonTIC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    @Html.Partial("_LoginPartial")


                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacidad</a>
                        </li>

                    </ul>

                @using Microsoft.AspNetCore.Identity
                @inject SignInManager<IdentityUser> SignInManager
                @if (SignInManager.IsSignedIn(User))
                {

                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li> *@
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle text-dark" href="#" id="navbardrop" data-toggle="dropdown">Usuario</button>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Usuario/Create">Crear Usuario</a>
                                <a class="nav-link text-dark" asp-area="" asp-page="/Usuario/List">Listar Usuarios</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle text-dark" href="#" id="navbardrop" data-toggle="dropdown">Encomienda</button>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Encomienda/Create">Crear Encomiendas</a>
                                <a class="nav-link text-dark" asp-area="" asp-page="/Encomienda/List">Listar Encomiendas</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle text-dark" href="#" id="navbardrop" data-toggle="dropdown">Servicio</button>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Servicio/Create">Crear Servicio</a>
                                <a class="nav-link text-dark" asp-area="" asp-page="/Servicio/List">Listar Servicios</a>
                            </div>
                        </li>

                    </ul>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
        <img style="height: 300px;"  src="https://www.liderempresarial.com/wp-content/uploads/2021/08/118559321_hi063112836.jpg">

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ProyectoCiclo3.App.Frontend - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
